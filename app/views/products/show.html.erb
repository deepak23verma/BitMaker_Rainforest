<h1><%= @product.name %></h1>
<p>Product Descpription: <%= @product.description %></p>
<p>Price: <%= number_to_currency(@product.price_in_cents) %></p>

<% if current_user %>
<!-- ################################################################# -->
  <h3>Reviews</h3>
  <div id="review-list">
    <%= render :partial => "products/reviews" %>
  </div>
<!-- ################################################################# -->  
  <h4>New Review</h4>

  <%= form_for([@product, @review], :remote => true) do |f| %> 

    <div class="field">
      <%= f.label :comment %><br/>
      <%= f.text_area :comment %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>

  <% else %>
    <p>Please <%= link_to "log in", new_session_path %> to add a review.</p>
<% end %> 

<%= link_to "Edit", edit_product_path(@product) %> | 
<%= link_to 'Delete', @product, method: :delete, data: { confirm: 'Are you sure?' } %>